<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="loan_email_template_manager" model="mail.template">
            <field name="name">Loan Email Template Manager</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="email_from">${object.company_id.email}</field>
            <field name="email_to">${object.email}</field>
            <field name="subject">New Loan Request Submission</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">

                    <b>Dear Manager,</b>
                    <br/>
                    <br/>
                    I hope this message finds you well.
                    <br/>
                    <br/>
                    I am writing to inform you that a new loan request has been generated by one of our employee.
                    Please find the detail of the request below:
                    <br/>
                    <br/>
                    <b>Employee Name:</b>
                    <span t-out="object.employee_id.name"/>
                    <br/>
                    <b>Loan Amount Requested:</b>
                    <span t-out="object.loan_amount"/>
                    PKR
                    <br/>
                    <b>Requested Loan Installment:</b>
                    <span t-out="object.installment"/>
                    Months
                    <br/>
                    <br/>
                    <div style="margin-top:20px;">
                        <a t-att-href="object.redirect_link"
                           style="background-color: #0080e9; margin-top: 10px; padding: 20px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 12px;">
                            Click Here
                        </a>
                    </div>
                    <br/>
                    <br/>
                    Thank you for your prompt attention to this matter.
                    <br/>
                    Best regards,
                    <br/>
                    <t t-esc="user.env.company.name"/>
                    <br/>
                </div>
            </field>
        </record>

        <record id="loan_email_template_user" model="mail.template">
            <field name="name">Loan Email Template User</field>
            <field name="model_id" ref="model_hr_loan"/>
            <field name="email_from">${object.company_id.email}</field>
            <field name="email_to">${object.email}</field>
            <field name="subject">Loan Request Approved</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">

                    <b>Dear &amp;nbsp <span t-out="object.employee_id.name"/>,
                    </b>
                    <br/>
                    <br/>
                    I hope this message finds you well.
                    <br/>
                    We are pleased to inform you that your loan application has been approved.
                    <br/>
                    <br/>
                    <b>Loan Amount Requested:</b>
                    <span t-out="object.loan_amount"/>
                    PKR
                    <br/>
                    <b>Requested Loan Installment:</b>
                    <span t-out="object.installment"/>
                    Months
                    <br/>
                    <b>Installment Per Month:</b>
                    <span t-out="object.loan_lines[0].amount"/>
                    <br/>
                    <b>Installment Start Date:</b>
                    <span t-out="object.loan_lines[0].date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}"/>
                    <br/>
                    <b>Installment End Date:</b>
                    <span t-out="object.loan_lines[-1].date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}"/>
                    <br/>
                    <b>Payment Schedule:</b>
                    Payments will be deducted on the<span t-out="object.payment_date.strftime('%d')"/>th of each month
                    from salary.
                    <!--                    <br/>-->
                    <!--                    <br/>-->
                    <!--                    <div style="margin-top:20px;">-->
                    <!--                        <a t-att-href="object.redirect_link"-->
                    <!--                           style="background-color: #0080e9; margin-top: 10px; padding: 20px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 12px;">-->
                    <!--                            More Detail-->
                    <!--                        </a>-->
                    <!--                    </div>-->
                    <br/>
                    <br/>
                    If you have any questions or need further assistance, please do not hesitate to contact us.
                    <br/>
                    <br/>
                    Best regards,
                    <br/>
                    <t t-esc="user.env.company.name"/>
                    <br/>
                </div>
            </field>
        </record>
    </data>
</odoo>